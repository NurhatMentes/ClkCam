@{
    Layout =null;
}


<div class="slider-container rev_slider_wrapper" style="height: 500px;">
    <div id="revolutionSlider" class="slider rev_slider manual" data-version="5.4.8">
        <ul>
              @foreach (var slider in @ViewBag.Slider)
              {
                  <li data-transition="fade">
                      <img src="@slider.ImgUrl"
                           alt="@slider.Title"
                           data-bgposition="center center"
                           data-bgfit="cover"
                           data-bgrepeat="no-repeat"
                           class="rev-slidebg">

                      <div class="tp-caption tp-caption-photo-label"
                           data-x="['left','left','left','left']"
                           data-hoffset="['28','28','28','28']"
                           data-y="['bottom','bottom','bottom','bottom']"
                           data-voffset="['28','28','28','28']"
                           data-start="500"
                           data-basealign="slide"
                           data-transform_in="y:[-300%];opacity:0;s:500;">@slider.Title</div>
                  </li>
              }
        </ul>
    </div>
</div>
