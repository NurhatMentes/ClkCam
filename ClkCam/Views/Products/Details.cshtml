@model ClkCam.Models.Products

@{
    ViewBag.Title = "Ürün Detay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card alert-dark">
    <div class="card-body">
        <h4 class="card-title">Ürün Detayı</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Price)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Price)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Content)
            </dt>

            <dd>
                @Html.Raw(Model.Content)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Date)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Date)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ImgUrl)
            </dt>

            <dd>
                <img src="@Model.ImgUrl" width="300" height="200" />
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Admin.FullName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Admin.FullName)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Category.CategoryName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Category.CategoryName)
            </dd>

        </dl>
    </div>
    <p>
        @Html.ActionLink("Düzenle", "Edit", new { id = Model.ProductId }) |
        @Html.ActionLink("Geri Dön", "Index")
    </p>
</div>